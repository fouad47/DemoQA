<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="DemoQA Test Suite" parallel="classes" thread-count="3">
    
    <listeners>
        <listener class-name="com.demoqa.utils.TestListener"/>
        <listener class-name="com.demoqa.utils.AnnotationTransformer"/>
    </listeners>

    <test name="Regression Tests">
        <packages>
            <package name="com.demoqa.tests.elements" />
            <package name="com.demoqa.tests.forms" />
            <package name="com.demoqa.tests.alerts" />
            <package name="com.demoqa.tests.widgets" />
            <package name="com.demoqa.tests.interactions" />
            <package name="com.demoqa.tests.bookstore" />
        </packages>
    </test>

</suite>
